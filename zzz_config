server:
  port: 8080
  sslPort: 8443
  readTimeout: 30
  writeTimeout: 30
  idleTimeout: 60
  pluginsDir: "./plugins"
  enableLogging: true
  logLevel: "info"
  logFormat: "json"
  metricsEnabled: true
  metricsPath: "/metrics"
  enableHTTPS: true
  certFile: "./certs/server.crt"
  keyFile: "./certs/server.key"
  enableAutoCert: false
  autoCertDomains:
    - "api.example.com"
    - "*.api.example.com"
  autoCertEmail: "admin@example.com"
  autoCertCacheDir: "./certs/autocert"

security:
  # CORS settings
  enableCORS: true
  corsAllowedOrigins:
    - "https://app.example.com"
    - "https://admin.example.com"
  corsAllowedMethods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  corsAllowedHeaders:
    - "Authorization"
    - "Content-Type"
    - "X-API-Key"
    - "X-Request-ID"
  
  # Content Security Policy
  enableCSP: true
  cspDirectives: "default-src 'self'; script-src 'self'; object-src 'none'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; connect-src 'self'"
  
  # Security Headers
  enableXSSProtection: true
  enableFrameOptions: true
  enableHSTS: true
  hstsMaxAge: 31536000  # 1 year
  enableSecurityHeaders: true
  
  # Rate Limiting
  enableRateLimiting: true
  rateLimitRequests: 100
  rateLimitPeriod: "1m"
  
  # Authentication
  enableJWTAuth: true
  j